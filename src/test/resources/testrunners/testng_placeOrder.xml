<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Opencart" verbose="5">
	
	<listeners>
		<listener class-name="com.qa.opencart.listeners.AllureReportListener"></listener>	
	</listeners>

	<test name="Place Single Items Tests">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.opencart.tests.PlaceOrderTest" />
		</classes>
	</test> 
	
	
	<test name="Place Multiple Items Tests">
		<parameter name="browser" value="edge" />
		<classes>
			<class name="com.qa.opencart.tests.PlaceMultipleItemsOrderTest" />
		</classes>
	</test> 
	

</suite> <!--
Suite -->
